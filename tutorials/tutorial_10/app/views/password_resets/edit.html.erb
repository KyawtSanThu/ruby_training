<h1>Reset Your Password</h1>

<%= form_tag "/password/reset" do %>
  <div></div>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  </div>

  <div>
    <%= label_tag :Confirm_Password%>
    <%= password_field_tag :Confirm_Password %>
  </div>

  <div>
    <%= submit_tag "Change", class: "btn btn-primary"%>
    <%= link_to "Reset Password", password_reset_path %>
  </div>
<% end %>