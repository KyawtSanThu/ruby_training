<h1>Login Page</h1>

<%= form_tag "/password/reset" do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :email %>
    <%= password_field_tag :email %>
  </div>

  <div>
    <%= submit_tag "Login", class: "btn btn-primary"%>
    <%= link_to "Reset Password", password_reset_path %>
  </div>
<% end %>